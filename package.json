{
  "name": "teamtrack",
  "private": true,
  "version": "1.1.0",
  "description": "TeamTrack - A Game Management App for Coaches and Team Managers",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:security": "eslint . --ext ts,tsx --plugin security",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:headed": "playwright test --config=e2e/playwright.config.ts --headed",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:debug": "playwright test --config=e2e/playwright.config.ts --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:setup": "node scripts/setup-e2e.mjs",
    "seed": "npx ampx seed"
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^6.13.2",
    "@aws-sdk/client-dynamodb": "^3.965.0",
    "@aws-sdk/lib-dynamodb": "^3.965.0",
    "@aws-sdk/types": "^3.965.0",
    "aws-amplify": "^6.6.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-ga4": "^2.1.0"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.19.0",
    "@aws-amplify/backend-cli": "^1.8.1",
    "@aws-amplify/seed": "^1.1.0",
    "@aws-sdk/client-ses": "^3.965.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.13",
    "aws-cdk-lib": "^2.234.1",
    "constructs": "^10.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-security": "^3.0.1",
    "jsdom": "^27.4.0",
    "knip": "^5.82.1",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.13"
  }
}
